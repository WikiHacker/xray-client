{
  "appId": "link.lolo.xray-client",
  "copyright": "Copyright 2022 LOLO",
  "asar": false,
  "artifactName": "${productName}-${version}-${platform}-${arch}.${ext}",
  "directories": {
    "output": "./dist/mac-arm/"
  },
  "files": [
    "**/*",
    "!node_modules/*",
    "!server-config-examples/*",
    "!dist-win.json",
    "!dist-mac.json",
    "!dist-mac-arm.json",
    "!src/icons/*",
    "src/icons/*.png",
    "!src/xray-core/xray-windows-64.exe",
    "!src/xray-core/xray-macos-64"
  ],
  "mac": {
    "icon": "./src/icons/dist/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "arm64"
        ]
      }
    ]
  },
  "dmg": {
    "title": "${productName}",
    "contents": [
      {
        "x": 150,
        "y": 220
      },
      {
        "x": 380,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "x": 400,
      "y": 400
    }
  }
}